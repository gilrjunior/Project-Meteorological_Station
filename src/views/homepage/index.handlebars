<section class="info">
        <div class="container text-center mt-5">
            <div class="row d-flex">
                <div class="col-md-4" id="pData">
                    <div id="data"></div>
                </div>
                <div class="col-md-4 offset-md-4">
                    <div id="bt0" class="btn btn-success" onclick="refresh()">Atualizar</div>
                </div>
            </div>
        </div>
    </section>

    <section class="cont">

        <div class="container overflow-hidden text-center">
            <div class="row gy-5">
                <div class="col-6">
                    <div class="p-5 alinhamento">
                        <div class="box">
                            <p class="txtB">Temperatura</p>
                            <div class="row">
                                <div class="col mt-4">
                                    <img class="icon" src="/img/Temp_frio.png" alt="">
                                    <p>Mínima</p>
                                    <div class="dados" id="Tmin">{{information.temp_min}} °C</div>
                                </div>
                                 <div class="col mt-4">
                                    <img class="icon" src="/img/Temp_atual.png" alt="">
                                    <p>Atual</p>
                                    <div class="dados" id="Tmin">{{information.temp_atual}} °C</div>
                                </div>
                                <div class="col mt-4">
                                    <img class="icon" src="/img/Temp_quente.png" alt="">
                                    <p>Máxima</p>
                                    <div class="dados" id="Tmax">{{information.temp_max}} °C</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-5 alinhamento" >
                        <div class="box">
                            <p class="txtB">Umidade</p>
                            <div class="row">
                                <div class="col mt-4">
                                    <img class="icon" src="/img/Umid_min.png" alt="">
                                    <p>Mínima</p>
                                    <div class="dados" id="Umin">{{information.umid_min}} %</div>
                                </div>
                                <div class="col mt-4">
                                    <img class="icon" src="/img/Umid_atual.png" alt="">
                                    <p>Atual</p>
                                    <div class="dados" id="Umax">{{information.umid_atual}} %</div>
                                </div>
                                <div class="col mt-4">
                                    <img class="icon" src="/img/Umid_max.png" alt="">
                                    <p>Máxima</p>
                                    <div class="dados" id="Umax">{{information.umid_max}} %</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-5 alinhamento">
                        <div class="box">
                            <p class="txtB">Vento</p>
                            <div class="row">
                                <div class="col mt-4">
                                    <img class="icon" src="/img/img_vento.png" alt="">
                                    <p>Velocidade</p>
                                    <div class="dados" id="velVen">{{information.velVento}} km/h</div>
                                </div>
                                <div class="col mt-4">
                                    <img class="icon" src="/img/vento_{{information.dirVento}}.png" alt="">
                                    <p>Direção</p>
                                    <div class="dados" id="dirV">{{information.dirVento}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="p-5 alinhamento">
                        <div class="box">
                            <p class="txtB">Chuva Diária</p>
                            <div class="row">
                                <div class=" mt-4">
                                    <img class="icon" src="/img/chuva_img.png" alt="">
                                    <p>Acumulada</p>
                                    <div class="dados" id="chuvaAc">{{information.qtdAgua}} mm</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <div id="linha"></div>

        <section class="botao">

            <button class="btn btn-success" id="bt1" onclick="charttoday(false, JSON.parse('{{ today }}'))">Hoje</button>
        
        </section>

    <section class="graficos">

        <div class="graphic">
            <canvas class="chart" id="ch1"></canvas>
        </div>
        
        <div class="graphic">
            <canvas class="chart" id="ch2"></canvas>
        </div>
        
        <div class="graphic">
            <canvas class="chart" id="ch3"></canvas>
        </div>
        
    </section>